


<article class="post">
  <div class="title">
    <a href="{{post_url}}" target="_blank">{{title}}</a>
    <span>({{ post_url}})</span>
  </div>
  <div class="meta">
    {{ "point" }} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{ "comment" comments.length}}</a>
  </div>
</article>
