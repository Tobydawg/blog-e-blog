<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Leave a comment!
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
      {{!-- <span>({{format_url post.post_url}})</span> --}}
    </div>
    <div>
    {{format_plural "point" }} by you on {{format_date post.createdAt}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}
<div class="comments">
  
{{#if post.comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>
      <div class="card-body">
        {{#each post.comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}
</div>
  

<script src="/javascript/comment.js"></script>

<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>